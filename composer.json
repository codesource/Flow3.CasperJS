{
  "name": "cdsrc/flow-casperjs",
  "description": "Base infrastructure for CasperJs testing in Flow3",
  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/jerome-breton/casperjs-installer.git"
    }
  ],
  "require": {
    "neos/flow": "*",

    "neuralys/casperjs": "*",
    "jakoch/phantomjs-installer": "*",
    "components/underscore": "*"
  },

  "bin": ["bin/cdsrc-flow-casperjs"],

  "autoload": {
    "psr-4": {
      "CDSRC\\Flow\\CasperJS\\": "src/"
    }
  }
}