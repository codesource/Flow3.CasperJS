{
    // See http://jshint.com/docs/options/

    "maxerr": 50,

    "bitwise": true,
    "camelcase": true,
    "curly": true,
    "eqeqeq": true,
    "forin": true,
    "freeze": true,
    "noarg": true,
    "noempty": true,
    "quotmark": "single",
    "undef": true,
    "unused": true,
    "strict": true,
    "globalstrict": true,

    // Environments
    "browser": true,
    "node": true,

    // Custom Globals
    "globals": {}
}
